@using ARC_InternetBanking.Core.Application.ViewModels.CuentaAhorro
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
@model SaveCuentaAhorroViewModel;
@{
    ViewData["Title"] = "Registro";

}

<body>
    <div class="container col-6 offset-3">
        <div class="card">

            <div class="card-header text-center pt-3">
                <h1 class="text-dark">Crear una cuenta de Ahorro</h1>
            </div>
            <div class="card-body">
                <div class="row justify-content-center pt-5 mt-5 m-1">

                    <form method="post" asp-controller="Admin" asp-action="CreateCuentaAhorros" enctype="multipart/form-data">


                        <div class="mb-3">
                            <label asp-for="IdUsuario" class="form-label">Usuarios</label>

                            <select asp-for="IdUsuario" asp-items="@(new SelectList(Model.Users.Where(a => a.Roles.Contains("Cliente")),"UsuarioId", "UserName"))" type="text" class="form-select mb-3" style="background-color: #2f5b75;">
                                <option value="0">Seleccione un Usuario</option>

                            </select>
                            <span asp-validation-for="IdUsuario" class="text-danger"> </span>
                        </div>
                        <div class="form-group mx-sm-4 pt-3 mb-2">
                            <input asp-for="Cantidad" class="form-control" placeholder="Agregar cantidad" style="background-color: #2f5b75;">
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mt-4 mb-5">
                            <button type="submit" class="btn btn-outline-primary">Crear Cuenta</button>
                            <a asp-controller="Admin" asp-action="CuentaAhorros" class="btn btn-outline-warning">Volver atras</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

