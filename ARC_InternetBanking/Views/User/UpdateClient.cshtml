@using ARC_InternetBanking.Core.Application.ViewModels.User;
@model EditUserViewModel;
@{
    ViewData["Title"] = "Registro";
    bool IsAdmin = false;
}

<body>
    <div class="container col-6 offset-3 mt-4">
        <div class="card">
            @if (Model.HasError)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <p>@Model.Error</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="row justify-content-center pt-5 mt-5 m-1">
                <form method="post" asp-controller="User" asp-action="UpdateClient" enctype="multipart/form-data">
                    <div class="form-group text-center pt-3">
                        <h1 class="text-dark">Editar Cliente</h1>
                    </div>
                    <div class="form-group col-10 offset-1 pt-3 mt-1 mb-2">
                        <input type="text" asp-for="Username" class="form-control bg-white" placeholder="Enter the UserName">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group col-10 offset-1 pt-3 mb-2">
                        <input asp-for="Nombre" class="form-control bg-white" placeholder="Enter the Name">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group col-10 offset-1 pt-3 mb-2">
                        <input asp-for="Apellido" class="form-control bg-white" placeholder="Enter the Apellido">
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group col-10 offset-1 pt-3 mb-3">
                        <input asp-for="Email" class="form-control bg-white" placeholder="Enter the Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-10 offset-1 pt-3 mb-3">
                        <input asp-for="Cedula" class="form-control bg-white" placeholder="Enter the Cedula">
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>
                    <div class="form-group col-10 offset-1 pt-3 mb-2 mt-2" id="clientSection" style="display: @(IsAdmin ? "none" : "block")">
                        <label class="form-control bg-white">Enter an Amount</label>
                        <input asp-for="MontoInicial" type="number" class="form-control bg-white mt-3" placeholder="Enter the Initial Amount">
                    </div>
                    <div class="form-group text-center mt-4 mb-5">
                        <button type="submit" class="btn btn-outline-primary rounded">Actualizar Usuario</button>
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-warning mt-2">Volver atras</a>
                    </div>
                    <input asp-for="UserId" class="form-control" hidden>
                    <label class="mb-5"></label>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script>
        function toggleAdminSection() {
            var isAdminSelect = document.getElementById('isAdminSelect');
            var clientSection = document.getElementById('clientSection');
            clientSection.style.display = isAdminSelect.value === 'false' ? 'block' : 'none';
        }
        toggleAdminSection();
    </script>
</body>
